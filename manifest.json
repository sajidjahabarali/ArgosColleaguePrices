{
  "manifest_version": 3,
  "name": "Argos Employee Prices",
  "description": "Extension to show prices with the employee discount on the Argos site.",
  "version": "1.0",
  "action": {
    "default_popup": "./popup.html",
    "default_icon": "./argos-icon.jpg"
  },
  "content_scripts": [{
    "js":["argos-employee-prices.js"],
    "matches":["https://www.argos.co.uk/product/*"]
  }]
}